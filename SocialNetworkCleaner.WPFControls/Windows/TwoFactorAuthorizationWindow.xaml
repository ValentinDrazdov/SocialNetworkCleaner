<Window x:Class="SocialNetworkCleaner.WPFControls.Windows.TwoFactorAuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialNetworkCleaner.WPFControls.Windows"
        mc:Ignorable="d"
        Title="Окно двухфакторной авторизации" Height="110" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Введите проверочный код:"></Label>
        <TextBox x:Name="txtTwoFactorCode" Grid.Row="1"></TextBox>
        <Button x:Name="btnTwoFactorCode" Grid.Row="1" Grid.Column="1" Click="btnTwoFactorCode_Click">OK</Button>
    </Grid>
</Window>
